<h1><%= @recipe.name %></h1>

<div id="ingredient">
  <ul>
    <%# empty array is truthy in ruby, need to check .length %>
    <%# .length is truthy too. 0 is truthy in ruby. WTF. %>
    <% unless @recipe.ingredients.empty? %>
      <% @recipe.ingredients.each do |ingredient| %>
        <li><%= ingredient.amount %> <%= ingredient.name %></li>
      <% end %>
    <% end %>
  </ul>
</div>

<p><%= @recipe.instruction %></p>

<div id="update-form">
  <form  action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="update-recipe-name">Name</label>
        <input type="text" name="update-recipe-name" id="update-recipe-name">
      </div>

      <div class="form-group">
        <label for="update-recipe-instruction">Instructions</label>
        <textarea type="text" name="update-recipe-instruction" id="update-recipe-instruction">
      </div>
      <button class="btn blue">Update!</button>
  </form>
  <form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button class="btn red" name="button">Delete!</button>
  </form>

</div>
